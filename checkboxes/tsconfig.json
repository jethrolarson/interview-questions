{
    "include": [
      "ts/**/*"
    ],
    "compilerOptions": {
      "outDir": "public",
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowJs": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "lib": [
        "dom",
        "ES2020"
      ],
      "target": "es5",
      "skipLibCheck": true,
      "strict": true,
      "module": "esnext",
      "moduleResolution": "node",
      "isolatedModules": false,
      "jsx": "react"
    }
  }
  